<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BenchBase">
    <defName>ErnaldasOven</defName>
    <label>Ernalda's Oven</label>
    <ThingClass>Building_WorkTable_HeatPush</ThingClass>
    <Description>An oven blessed by Ernalda, the Queen of the Earth. Bakes bread which remains warm for hours, using less grain than usual.</Description>
    <graphicData>
      <texPath>Things/Treasures/ErnaldasOven/ErnaldasOven</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <constructEffect>ConstructMetal</constructEffect>
    <CostList>
      <Steel>1</Steel>
    </CostList>
    <AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <statBases>
      <MaxHitPoints>490</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <Size>(3,1)</Size>
    <Passability>PassThroughOnly</Passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
    <!--
      <li>CookMealSimple</li>
      <li>CookMealFine</li>
      <li>CookMealLavish</li>
      <li>MakePemmican</li>
      -->
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>160.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
    </comps>
    <building>
      <isMealSource>true</isMealSource>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.25</heatPerTickWhileWorking>
    </building>
  </ThingDef>

  <WorkGiverDef>
    <defName>DoBillsErnaldasOven</defName>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Cooking</workType>
    <priorityInType>100</priorityInType>
    <fixedBillGiverDefs>
      <li>ErnaldasOven</li>
    </fixedBillGiverDefs>
    <verb>cook</verb>
    <gerund>cooking</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>

</ThingDefs>